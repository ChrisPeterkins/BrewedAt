{
  "name": "brewedat-web",
  "version": "1.0.0",
  "description": "BrewedAt Web Platform (Public Site + Admin Dashboard)",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:public\"",
    "dev:admin": "vite --config vite.admin.config.js --port 5173",
    "dev:public": "vite --config vite.public.config.js --port 5174",
    "build": "npm run build:admin && npm run build:public",
    "build:admin": "vite build --config vite.admin.config.js",
    "build:public": "vite build --config vite.public.config.js",
    "preview": "vite preview"
  },
  "keywords": [
    "craft-beer",
    "events",
    "brewery",
    "marketing"
  ],
  "author": "BrewedAt",
  "license": "ISC",
  "dependencies": {
    "firebase": "^12.3.0",
    "html2canvas": "^1.4.1",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.7"
  }
}
